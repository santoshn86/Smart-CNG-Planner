<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view_user">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/g3">


        <TextView
            android:id="@+id/ty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="39dp"
            android:layout_marginBottom="20dp"
            android:text="Customer Register List"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/listv"
            android:layout_width="409dp"
            android:layout_height="729dp"
            android:layout_below="@+id/ty"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="5dp"
            android:cacheColorHint="#110101"
            android:choiceMode="multipleChoiceModal"
            android:clipToPadding="true"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp">


        </ListView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/listv"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="86dp"
            android:layout_marginEnd="166dp"
            android:layout_marginBottom="760dp"
            android:background="@drawable/et_style"
            android:onClick="back"
            android:text="Back"
            android:textAlignment="center"
            android:textColor="@android:color/holo_green_dark" />

    </RelativeLayout>

</ScrollView>
